<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wwwconcepts.firebase">



    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="com.example.wwwconcepts.firebase.VolleyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-library android:name="org.apache.http.legacy" android:required="false" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"
                    android:windowSoftInputMode="adjustPan"></activity> // hide bottomnavbar when keyboard is open
        <activity android:name=".SignupActivity"></activity>
        <activity android:name=".ResetPasswordActivity"></activity>
    </application>


</manifest>